	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
		<s:State name="selected" />
	</s:states>
	
	<s:Rect left="0" top="0" right="0" bottom="0">
		<s:fill>
			<s:SolidColor alpha="0" />
		</s:fill>
	</s:Rect>
	
	<s:Label  
		text="{data}"			
		verticalCenter="0"
		paddingBottom="5"
		paddingLeft="2"
		paddingRight="2"
		/>
	
	<drawing:DottedLine 
		id="separator"
		bottom="0" 
		color="{getStyle('separatorColor')}"
		left="0" right="0" height="1"/>
